@model InterviewSathi.Web.Models.Entities.ApplicationUser


<form asp-action="EditProfile" asp-controller="Profile" enctype="multipart/form-data">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Edit Profile</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfileUpload" class="control-label"></label>
                <input asp-for="ProfileUpload" class="form-control" />
                <img src="~/images/Profiles/@Model.ProfileURL" alt="NoImage" height="30px" width="50px">
                <span asp-validation-for="ProfileUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverUpload" class="control-label"></label>
                <input asp-for="CoverUpload" class="form-control" />
                <img src="~/images/Covers/@Model.CoverURL" alt="NoImage" height="30px" width="50px">
                <span asp-validation-for="CoverUpload" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>

