@using InterviewSathi.Web.Models.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InterviewSathi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InterviewSathi.Web.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz@6..12&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <partial name="Notifications" />
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light mb-3 fixed-top mask-custom shadow-0">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><span style="color: #5e9693;">Interview</span><span style="color: #000;">Sathi</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2">

                        <li class="nav-item me-3">
                            @if (!SignInManager.IsSignedIn(User))
                            {
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fas fa-home"></i>
                                    <span class="d-lg-none">Home</span>

                                </a>
                            }
                            else
                            {
                                <a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Index">
                                    <i class="fas fa-blog"></i>
                                    <span class="d-lg-none">Blogs</span>

                                </a>
                            }
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Experts">
                                <i class="fas fa-users"></i>
                                <span class="d-lg-none">Experts</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item me-3 me-lg-0">
                            <a class="nav-link" href="#">
                                <i class="fab fa-youtube"></i>
                            </a>
                        </li>
                        <li class="nav-item me-3 me-lg-0">
                            <a class="nav-link" href="#">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li class="nav-item me-3 me-lg-0">
                            <a class="nav-link" href="#">
                                <i class="fab fa-instagram"></i>
                            </a>
                        </li>

                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login" data-toggle="tooltip" title="Sign In">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <button type="submit" class="nav-link btn" data-toggle="tooltip" title="Logout">
                                        <i class="bi bi-box-arrow-in-left"></i>
                                    </button>
                                </form>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
        <!-- Navbar -->
    </header>

    <div class="container-fluid margin-top">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="container-fluid bg-dark text-light py-5">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5">
            <div class="col mb-3 ps-4">
                <h5 class="mb-3">Stay Connected</h5>
                <p class="text-body-secondary mb-4">Connect with us on social media to stay updated.</p>
                <ul class="social-icons list-inline">
                    <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-twitter"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-instagram"></i></a></li>
                    <li class="list-inline-item"><a href="#" class="social-link"><i class="fab fa-linkedin"></i></a></li>
                </ul>
            </div>

            <div class="col mb-3"></div>

            <div class="col mb-3">
                <h5 class="mb-3">Our Services</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><a href="#" class="nav-link text-white">Interview Experts</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Scheduling</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Experts Feed</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">Social Networking</a></li>
                    <li class="nav-item"><a href="#" class="nav-link text-white">About Us</a></li>
                </ul>
            </div>
            <div class="col mb-3">
                <h5 class="mb-3">Contact Info</h5>
                <ul class="nav flex-column">
                    <li class="nav-item"><span class="nav-link text-body-secondary">info@interviewsathi.com</span></li>
                    <li class="nav-item"><span class="nav-link text-white">Nepal</span></li>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col text-center">
                <p class="text-body-secondary mb-0">&copy; <span id="currentYear"></span> InterviewSathi. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog" id="page">
        </div>
    </div>
    <script>
        document.getElementById('currentYear').innerText = new Date().getFullYear();
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script>
        AOS.init({
            once: true
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
