@using InterviewSathi.Web.Models.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="#" asp-action="#">Chat</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="#" asp-action="#">Notifications</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="#" asp-action="#">Profiles</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="btn btn-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-dark" asp-controller="Account" asp-action="Login">Sign Up</a>
    </li>
}