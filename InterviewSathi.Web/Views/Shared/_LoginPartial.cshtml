@using InterviewSathi.Web.Models.Entities
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="#" asp-action="#">Chat</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Notification" asp-action="Index" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)?.ToString()">Notifications</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index" asp-route-username="@User.FindFirstValue(ClaimTypes.Name)">Profiles</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-dark" asp-controller="Account" asp-action="Login">Sign Up</a>
    </li>
}