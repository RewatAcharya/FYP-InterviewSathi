@model InterviewSathi.Web.Models.Entities.Skill

<form asp-action="Create" asp-controller="Skill">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Add Skills</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameOfSkill" class="control-label"></label>
                <input asp-for="NameOfSkill" class="form-control" />
                <span asp-validation-for="NameOfSkill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescofSkill" class="control-label"></label>
                <input asp-for="DescofSkill" class="form-control" />
                <span asp-validation-for="DescofSkill" class="text-danger"></span>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}