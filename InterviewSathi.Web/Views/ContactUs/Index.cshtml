@model IEnumerable<ContactUs>

@{
    Layout = "_Admin";
    int count = 1;
}

<ul class="nav nav-tabs" id="statusTabs">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" data-status="all" href="#">All</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-status="true" href="#">Viewed</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-status="false" href="#">New</a>
    </li>
</ul>

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="reviewTable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Message</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody id="myTable">
                                @if (Model.Any())
                                {
                                    @foreach (var item in Model.OrderByDescending(x => x.CreatedAt))
                                    {
                                        <tr class="review-row" data-status="@item.IsViewed.ToString().ToLower()">
                                            <td>@count</td>
                                            <td>@item.SenderName</td>
                                            <td>@item.Email</td>
                                            <td>@item.Message</td>
                                            <td>@(item.IsViewed == true ? "Viewed" : "New")</td>
                                            <td>@item.CreatedAt</td>
                                            <td>
                                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="ContactUs" asp-route-id="@item.Id">Detail</a>
                                            </td>
                                        </tr>
                                        count++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No reviews found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const statusTabs = document.querySelectorAll('#statusTabs .nav-link');

    statusTabs.forEach(tab => {
        tab.addEventListener('click', function (event) {
            event.preventDefault();
            const status = this.dataset.status;
            filterReviews(status);
            statusTabs.forEach(tab => tab.classList.remove('active'));
            this.classList.add('active');
        });
    });

    function filterReviews(status) {
        const rows = document.querySelectorAll('.review-row');

        rows.forEach(row => {
            if (status === 'all' || row.dataset.status === status) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    // Initialize with the first tab active
    document.querySelector('#statusTabs .nav-link').click();
</script>
