@using System.Security.Claims
@model InterviewSathi.Web.Models.Entities.BlogsEntity.Blog


<form asp-action="Create" asp-controller="Blog" enctype="multipart/form-data">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Post a blog</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control" ></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BlogPath" class="control-label"></label>
        <input asp-for="BlogPath" class="form-control" />
        <span asp-validation-for="BlogPath" class="text-danger"></span>
    </div>
    <input asp-for="PostedBy" class="form-control" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)?.ToString()" hidden />
    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    $(document).ready(function () {
        postEvent = function (xhr) {
            alert("Blog post successful");
            $('.btn-close').click();
            location.reload();
        }
    });
</script>